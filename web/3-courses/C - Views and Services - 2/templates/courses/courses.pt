<div metal:use-macro="load: ../shared/_layout.pt">
    <__content__ metal:fill-slot="content" tal:omit-tag="True">

        <main id="main" data-aos="fade-in">

        <!-- ======= Breadcrumbs ======= -->
        <div class="breadcrumbs">
            <div class="container">
            <h2>Pr√≥ximos Cursos</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
            </div>
        </div><!-- End Breadcrumbs -->

        <!-- ======= Courses Section ======= -->
        <section id="courses" class="courses">
            <div class="container" data-aos="fade-up">

                <div class="row" data-aos="zoom-in" data-aos-delay="100">

                    <__repeat__ tal:repeat="course available_courses" tal:omit-tag="True">
                        <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                            <div class="course-item">
                                <img src="/static/assets/img/courses/course-${course.id}.jpg" class="img-fluid" alt="...">
                                <div class="course-content">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h4>${course.category}</h4>
                                        <p class="price">${course.price}</p>
                                    </div>

                                    <h3><a href="/courses/${course.id}">${course.name}</a></h3>
                                    <p>${course.summary}</p>
                                    <div class="trainer d-flex justify-content-between align-items-center">
                                        <div class="trainer-profile d-flex align-items-center">
                                            <img src="/static/assets/img/trainers/trainer-${course.trainer_id}.jpg" class="img-fluid" alt="">
                                            <span>${course.trainer_name}</span>
                                        </div>
                                        <div class="trainer-rank d-flex align-items-center">
                                            <i class="bx bx-user"></i>&nbsp;50
                                            &nbsp;&nbsp;
                                            <i class="bx bx-heart"></i>&nbsp;65
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- End Course Item-->
                    </__repeat__>

                </div>
            </div>
        </section><!-- End Courses Section -->

        </main><!-- End #main -->
    </__content__>
</div>